<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employer.Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:padding="17dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="46dp"
                android:textStyle="bold"
                android:gravity="center"
                >
            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_back"
                android:id="@+id/employer_username"
                android:hint="User Name"
                android:padding="10dp"
                android:textSize="25sp">

            </com.google.android.material.textfield.TextInputEditText>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:padding="10dp"
                android:textSize="25sp"
                android:paddingStart="15dp"
                android:id="@+id/employer_email"
                android:background="@drawable/button_back"
                android:inputType="textEmailAddress"
                android:hint="Email">

            </com.google.android.material.textfield.TextInputEditText>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:padding="10dp"
                android:textSize="25sp"
                android:paddingStart="15dp"
                android:id="@+id/employer_password"
                android:background="@drawable/button_back"
                android:inputType="textPassword"
                android:hint="Password">

            </com.google.android.material.textfield.TextInputEditText>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:background="@drawable/button_back"
                android:hint="Confirm Password"
                android:id="@+id/employer_confirmpassword"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:textSize="25sp">

            </com.google.android.material.textfield.TextInputEditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/employer_register"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="Register"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/button_back"
                    android:textSize="25sp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/employer_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/button_back"
                    android:textSize="25sp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="0dp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</ScrollView>